@model RoT_v6.ViewModels.JobsDetails_JobPurchasesWorkTask

@{
    ViewData["Title"] = "Details";
}

<h2>Job Details</h2>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <dl class="dl-horizontal" style="border: 2px solid #2B303A;">
                <dt>
                    @Html.DisplayNameFor(model => model.Job.jobNum)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Job.jobNum)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Job.Client)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Job.Client)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Job.Status)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Job.Status)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Job.StartDate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Job.StartDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Job.DesiredDate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Job.DesiredDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Job.CompleteDate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Job.CompleteDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Job.Description)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Job.Description)
                </dd>
            </dl>
        </div>
        <div class="col-md-4" style="border: 2px solid #2B303A;">
            <h4>Hours Current vs. Budgeted</h4>
            <div class="progress" id="hours_Progress">
            </div>
            <h4>Cost Current vs. Budgeted</h4>
            <div class="progress" id="cost_Progress">
            </div>
        </div>
    </div>
</div>
<div class="row">
    <p>
        <h2>Tasks</h2>
        <a class="btn btn-primary" asp-controller="WorkTasks" asp-action="Create" asp-route-JobID="@Model.Job.JobID">Create New</a>
    </p>
    <table class="table table-striped table-bordered" id="WorkTasks">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.WorkTasks[0].Block)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkTasks[0].partNum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkTasks[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkTasks[0].Employee)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkTasks[0].Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkTasks[0].CompleteDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.WorkTasks)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Block)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.partNum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompleteDate)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-controller="WorkTasks" asp-action="Edit" asp-route-id="@item.TaskID" asp-route-JobID="@Model.Job.JobID">Edit</a>
                        <a class="btn btn-primary" asp-controller="WorkTasks" asp-action="Details" asp-route-id="@item.TaskID">Details</a>
                        <a class="btn btn-primary" asp-controller="WorkTasks" asp-action="Delete" asp-route-id="@item.TaskID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<br />
<br />
<div class="row">
    <p>
        <h2>Bill of Materials</h2>
        <a class="btn btn-primary" asp-controller="Purchases" asp-action="Create" asp-route-JobID="@Model.Job.JobID">Create New</a>
    </p>
    <table class="table table-striped table-bordered" id="Purchases">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Purchases[0].Block)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Purchases[0].ArrivedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Purchases[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Purchases[0].EstArrDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Purchases[0].Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Purchases[0].RequestDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Purchases)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Block)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ArrivedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EstArrDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestDate)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.purchID">Edit</a> |
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.purchID">Details</a> |
                        <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.purchID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<br />
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Job.JobID">Edit</a>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
<script>
    $(document).ready(function () {
        $("#WorkTasks").DataTable({
            "paging": false,
            "ordering": false,
            "info": false,
            "columnDefs": [
                { "className": "dt-center", "targets": "_all" }
            ]
        });
        $("#Purchases").DataTable({
            "paging": false,
            "ordering": false,
            "info": false,
            "columnDefs": [
                { "className": "dt-center", "targets": "_all" }
            ]
        });
        var estHours = @Model.Job.EstHours;
        var invHours = @Model.Job.InvHours;
        var estCost = @Model.Job.EstCost;
        var invCost = @Model.Job.InvCost;
        var hourProg = parseInt((invHours / estHours) * 100);
        var costProg = parseInt((invCost / estCost) * 100);
        $("#hours_Progress").html('<div class="progress-bar" role="progressbar" aria-valuenow="' + hourProg + '" aria-valuemin="0" aria-valuemax="120" style="width: ' + hourProg + '%; min-width: 5em;">' + invHours + '/' + estHours + '</div>');
        $("#cost_Progress").html('<div class="progress-bar" role="progressbar" aria-valuenow="' + costProg + '" aria-valuemin="0" aria-valuemax="120" style="width: ' + costProg + '%; min-width: 5em;">' + invCost + '/' + estCost + '</div>');
    });
</script>
