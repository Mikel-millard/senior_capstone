@model RoT_v6.ViewModels.Dashboard_WorkTaskToDo

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<h1>COMING SOON</h1>

<div class="row">
    <p>
        <h2 style="display: inline-block; padding-right:1em;">Tasks</h2>
    </p>
    <table class="table table-striped table-bordered" id="WorkTasks">
        <thead class="data_table_head">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.WorkTasks[0].Block)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkTasks[0].partNum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkTasks[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkTasks[0].Employee)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkTasks[0].Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkTasks[0].CompleteDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.WorkTasks)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Block)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.partNum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompleteDate)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-controller="WorkTasks" asp-action="EditDashboard" asp-route-id="@item.TaskID" asp-route-JobID="@item.JobID">Edit</a>
                        <a class="btn btn-primary" asp-controller="WorkTasks" asp-action="DetailsDashboard" asp-route-id="@item.TaskID">Details</a>
                        <a class="btn btn-primary" asp-controller="WorkTasks" asp-action="DeleteDashboard" asp-route-id="@item.TaskID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function () {
        $("#WorkTasks").DataTable({
            "scrollY": "200px",
            "scrollCollapse": true,
            "paging": false,
            "ordering": false,
            "info": false,
            "columnDefs": [
                { "className": "dt-center", "targets": "_all" }
            ]
        });
    })
</script>
