@model RoT_v6.Models.ToDo

@{
    ViewData["Title"] = "Edit";
}

@{ 
    Layout = "";
}
<h2>Edit</h2>

<form asp-action="Edit/@Model.ToDoId">
    <div class="form-horizontal">
        <h4>ToDo</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ToDoId" />
        <div class="form-group">
            <label asp-for="CreatedDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CreatedDate" class="form-control datetime" />
                <span asp-validation-for="CreatedDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Description" rows="4" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DueDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DueDate" class="form-control datetime" />
                <span asp-validation-for="DueDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Priority" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Priority" class="form-control">
                    <option>High</option>
                    <option>Medium</option>
                    <option>Low</option>
                </select>
                <span asp-validation-for="Priority" class="text-danger" />
            </div>
        </div>


        <div class="form-group">
            <label asp-for="employee" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="employee" asp-items="@Model.Employed">                    
                </select>
            </div>
        </div>





        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script type="text/javascript">

        $(function () {
            $('.datetime').datetimepicker({
                format: 'MM/DD/YYYY'
            });
        });
</script>
