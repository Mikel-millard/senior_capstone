<div class="container-fluid">
    <div align="center"><img src="http://www.bptdesign.com/images/final%20logo_w_eco%20v10.jpg?crc=68926871"></div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br/>
    <div class="row">
        <div align="center">
            <section class="loginform cf">
                <form name="login" action="index_submit" method="get" accept-charset="utf-8">

                    <label for="usermail">Email</label>
                    <input type="email" name="account" placeholder="yourname@email.com" required>
                    <label for="password">Password</label>
                    <input type="password" name="password" placeholder="password" required>
                    <input type="submit">           

                </form>
            </section>
        </div>
    </div>
</div>